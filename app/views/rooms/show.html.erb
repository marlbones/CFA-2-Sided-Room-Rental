<p id="notice"><%= notice %></p>

<div>
  <h3 class= "orange">
    <strong><%= @room.title %></strong>
  </h3>

  <% @room.images.each do |image| %>
    <img src="<%= image.url %>">
  <% end %>


  <p>
    <strong>Description:</strong>
    <%= @room.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency (@room.price) %>
  </p>

  <p>
    <strong>Capacity:</strong>
    <%= @room.capacity %>
  </p>

  <p>
    <strong>Bathrooms:</strong>
    <%= @room.bathrooms %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @room.user.email %>
  </p>

  <p>
    <strong>Pets:</strong>
    <%= true_false(@room.pets) %>
  </p>

  <p>
    <strong>Smoking:</strong>
    <%= @room.smoking %>
  </p>

  <p>
    <strong>Wifi:</strong>
    <%= @room.wifi %>
  </p>

  <p>
    <strong>Bath:</strong>
    <%= @room.bath %>
  </p>

  <p>
    <strong>Share:</strong>
    <%= @room.share %>
  </p>

  <p>
    <strong>Parties:</strong>
    <%= @room.parties %>
  </p>

  <%= link_to "Book Now", new_booking_path(room_id: @room.id), class: 'btn btn-default' %>

  <%= link_to 'Edit', edit_room_path(@room), class: 'btn btn-default' %>
  <%= link_to 'Back', rooms_path, class: 'btn btn-default' %>
</div>
